generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "sqlite"
    url          = "file:./tankmon.db"
    relationMode = "prisma"
}

model Tank {
    id           String @id
    monitorId    String
    name         String
    sensorHeight Float
    diameter     Float
    capacity     Float

    status Status[]
}

model Status {
    id             Int    @id @default(autoincrement())
    monitorId      String
    distance       Float
    batteryCharge  Float
    signalStrength Float
    signalQuality  Float

    tanks Tank[]
}
